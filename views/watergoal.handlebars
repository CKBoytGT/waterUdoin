
<body class="flex flex-col items-center justify-center h-screen bg-gray-200">
  <form class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 max-w-xs">
    <div class="mb-4">
      <label class="block text-gray-700 font-bold mb-2" for="weight">
        Weight (in pounds)
      </label>
      <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="weight" type="number" placeholder="Enter your weight">
    </div>
    <div class="mb-4">
      <label class="block text-gray-700 font-bold mb-2" for="exercise-time">
        Average Exercise Time
        (in minutes)
      </label>
      <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="exercise-time" type="number" placeholder="Enter your exercise time">
    </div>
    <div class="mb-4">
      <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full" id="calculate-button" type="submit">
        Calculate Water Goal
      </button>
    </div>
    <div class="mb-4">
      <div id="result-container"></div>
    </div>
  </form>
  <script src="/public/js/waterGoal.js"></script>